<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<!-- EVC v1 messages converter -->
	<bean id="v1.ws.payloadInfoConverter" class="com.expedia.evc.v1.ws.convert.PayloadInfoConverter" />
	<bean id="v1.ws.disableCardRQTypeConverter" class="com.expedia.evc.v1.ws.convert.DisableCardRQTypeConverter" />
	<bean id="v1.ws.creditCardDetailsConverter" class="com.expedia.evc.v1.ws.convert.CreditCardDetailsConverter" />
	<bean id="v1.ws.addressConverter" class="com.expedia.evc.v1.ws.convert.AddressConverter" />
	<bean id="v1.ws.amountConverter" class="com.expedia.evc.v1.ws.convert.AmountConverter" />
	<bean id="v1.ws.applyCardRQTypeConverter" class="com.expedia.evc.v1.ws.convert.ApplyCardRQTypeConverter" />
	<bean id="v1.ws.currencyAmountTypeConverter" class="com.expedia.evc.v1.ws.convert.CurrencyAmountTypeConverter" />
	<bean id="v1.ws.creditCardDetailsToApplyCardRSConverter" class="com.expedia.evc.v1.ws.convert.CreditCardDetailsToApplyCardRSConverter" />
	<bean id="v1.ws.creditCardDetailsToCreditCardTypeConverter" class="com.expedia.evc.v1.ws.convert.CreditCardDetailsToCreditCardTypeConverter" />
	
</beans>
